{
    "name": "cheppers/otpsp-client",
    "description": "OTP SimplePay client",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1",
        "ext-dom": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.2.1",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\OtpspClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cheppers\\OtpspClient\\Tests\\": "tests/src/"
        }
    },
    "scripts": {
        "lint:phpcs": "phpcs ./bin/phpcs --standard=PSR2 src/ tests/"
    }
}
