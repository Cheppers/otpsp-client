{
    "name": "cheppers/otp-client",
    "description": "OTP Simple communicator",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2@dev",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\OtpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cheppers\\OtpClient\\Tests\\": "tests/src/"
        }
    },
    "scripts": {
        "lint:phpcs": "phpcs ./bin/phpcs --standard=PSR2 src/ tests/"
    }
}
