{
    "name": "cheppers/otpsp-client",
    "description": "OTP SimplePay client",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "php": ">=8.1",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.5",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.4",
        "twig/twig": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\OtpspClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cheppers\\OtpspClient\\Tests\\": "tests/src/"
        }
    }
}
